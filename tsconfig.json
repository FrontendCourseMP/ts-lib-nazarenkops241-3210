{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Output для компиляции */
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
